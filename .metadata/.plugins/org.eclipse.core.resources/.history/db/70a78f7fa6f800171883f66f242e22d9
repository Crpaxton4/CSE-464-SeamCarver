	static void plot_seam(ImageData img, int[] seam){
		int x = img.getWidth()/2;
		int y = 0;
		Random rand = new Random();
		for(int j = 0; j<img.getHeight(); j++){
			y++;
			x += rand.nextBoolean() ? -1: 1;
			img.setPixel(x, y, Pixel.getIntColor(0.0f, 0.0f, 0.0f));
		}
	
	}
	
